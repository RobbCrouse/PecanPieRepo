@using pecanpie.Models
@model pecanpie.Models.UserViewModel

<h1>Welcome to the Dojo Activity Center</h1>
<div asp-validation-summary="All"></div>

@Html.Partial( "LoginPage")

<h2>Registration</h2>
<br>

<form asp-controller="Home" asp-action="RegisterForm" method="Post">
    

    <label asp-for="FirstName"></label>
    <input asp-for="FirstName"/>
    <br>


    <label asp-for="LastName"></label>
    <input asp-for="LastName"/>
    <br>


    <label asp-for="Email"></label>
    <input asp-for="Email"/>
    <br>


    <label asp-for="Password"></label>
    <input asp-for="Password"/>
    <br>


    <label asp-for="PasswordConfirmation"></label>
    <input asp-for="PasswordConfirmation"/>
    <br>


    <button type="submit">Register!</button>

</form>

